<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.houseonplam.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_brokers"
        android:name="com.example.houseonplam.ui.brokers.BrokersFragment"
        android:label="Brokers"
        tools:layout="@layout/fragment_brokers">
        <action
            android:id="@+id/action_brokersFragment_to_brokerDetailFragment"
            app:destination="@id/navigation_broker_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favourite"
        android:name="com.example.houseonplam.ui.favourite.FavouriteFragment"
        android:label="Favourite"
        tools:layout="@layout/fragment_favourite" />

    <fragment
        android:id="@+id/navigation_calculator"
        android:name="com.example.houseonplam.ui.calculator.CalculatorFragment"
        android:label="Calculator"
        tools:layout="@layout/fragment_calculator" />

    <fragment
        android:id="@+id/navigation_more"
        android:name="com.example.houseonplam.ui.favourite.FavouriteFragment"
        android:label="More"
        tools:layout="@layout/fragment_favourite" />

    <fragment
        android:id="@+id/navigation_broker_detail"
        android:name="com.example.houseonplam.ui.brokers.BrokerDetailFragment"
        android:label="Broker Detail"
        tools:layout="@layout/fragment_broker_detail">
        <argument
            android:name="brokerId"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

</navigation>
